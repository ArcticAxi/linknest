---
import SocialIcon from '../components/SocialIcon.astro';

const { href, label, icon } = Astro.props;
---
<a href={href} target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-full text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">
    {icon && <SocialIcon name={icon} size={20} />}
    {label}
</a>
